<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <input id="culture" name="culture" type="checkbox" value="pl" onclick="handleCheckbox(this);" />
            <label for="culture">Scales</label>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Millennium Bank Recruitment ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var handleCheckbox = function() {
            if (document.getElementById('culture').checked) {
                console.log("clicked")
                $.ajax({
                          type: 'GET',
                          url:  "@Url.Action("ChangeCurrentCulture", "Culture", new { lang = "en-GB"})",
                          data: { }
                });
            } else {
                $.ajax({
                          type: 'GET',
                          url:  "@Url.Action("ChangeCurrentCulture", "Culture", new { lang = "pl-PL"})",
                          data: { }
                });
            }
        }

